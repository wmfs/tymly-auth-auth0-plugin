{
  "templateMeta": {
    "name": "add-mapping",
    "title": "Add Auth0 Mapping",
    "category": "system"
  },
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Jumbotron",
      "title": "{{data.auth0}} ({{data.roleId}})"
    },
    {
      "type": "TextBlock",
      "spacing": "large",
      "size": "medium",
      "wrap": true,
      "text": "Are you sure you want to remove this mapping?"
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Cancel"
    },
    {
      "type": "Action.Submit",
      "title": "Remove Mapping"
    }
  ],
  "$schema": "https://raw.githubusercontent.com/wmfs/cardscript-schema/master/lib/schema.json",
  "version": "1.0"
}

{
  "templateMeta": {
    "name": "add-mapping",
    "title": "Add Auth0 Mapping",
    "category": "system"
  },
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Jumbotron",
      "title": "{{data.auth0}} ({{data.roleId}})"
    },
    {
      "type": "TextBlock",
      "spacing": "large",
      "size": "medium",
      "wrap": true,
      "text": "Are you sure you want to remove this mapping?"
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Cancel"
    },
    {
      "type": "Action.Submit",
      "title": "Remove Mapping"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}

{
  "templateMeta": {
    "name": "user-directory",
    "title": "Auth0 User Directory",
    "category": "system"
  },
  "hooks": {
    "afterLeave": {
      "actions": [
        {
          "type": "Action.StoreData"
        }
      ]
    }
  },
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "spacing": "none",
      "items": [
        {
          "id": "query",
          "type": "Input.Text",
          "title": "Search user"
        },
        {
          "type": "Container",
          "spacing": "none",
          "justifyContent": true,
          "items": [
            {
              "type": "TextBlock",
              "text": "{{ data.totalHits || 0 }} result{{ data.totalHits === 1 ? '' : 's' }}"
            },
            {
              "type": "Action.ApiLookup",
              "title": "Search",
              "stateMachineName": "auth0_searchUsers_1_0",
              "input": {
                "page": "$.page",
                "query": "$.query"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "none",
      "showWhen": "data.results && data.results.length",
      "items": [
        {
          "id": "userResultsList",
          "type": "List",
          "showLaunches": true,
          "clickToLaunch": true,
          "arrayPath": "data.results",
          "avatar": {
            "type": "image",
            "sourcePath": "item.picture"
          },
          "templates": {
            "label": "{{ item.name }}",
            "sublabel": [
              "{{ item.user_id }}",
              "{{ item.email || 'No email' }}",
              "Last login: {{ formatDate(item.last_login, 'DD MMM YYYY HH:mm') }} ({{ item.logins_count }} logins)",
              "{{ item.identities.length ? item.identities.map(i => i.connection).join(', ') : '' }}"
            ]
          }
        },
        {
          "type": "Pagination",
          "page": "data.page",
          "totalPages": "data.totalPages",
          "endpoint": {
            "stateMachineName": "auth0_searchUsers_1_0",
            "input": {
              "page": "$.page",
              "query": "$.query"
            }
          }
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
